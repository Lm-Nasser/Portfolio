    /* Base styles */
    :root {
      --primary: #333;
      --secondary: #646464;
      --accent: #5e17eb;
      --background: #f9f9f9;
      --light: #ffffff;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      cursor: none;
    }
    
    body {
      font-family: 'Space Mono', monospace;
      background-color: var(--background);
      color: var(--primary);
      line-height: 1.6;
      overflow-x: hidden;
      padding: 0 5%;
    }
    
    /* Custom cursor */
    .cursor {
      width: 20px;
      height: 20px;
      border: 1px solid var(--accent);
      border-radius: 50%;
      position: fixed;
      transform: translate(-50%, -50%);
      pointer-events: none;
      transition: width 0.3s, height 0.3s, background-color 0.3s;
      z-index: 9999;
    }
    
    .cursor-dot {
      width: 5px;
      height: 5px;
      background-color: var(--accent);
      border-radius: 50%;
      position: fixed;
      transform: translate(-50%, -50%);
      pointer-events: none;
      z-index: 10000;
    }
    
    a, button, .project, .skill {
      cursor: none;
    }
    
    /* Layout */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }
    

        /* Base styles */
        :root {
            --primary: #333;
            --secondary: #646464;
            --accent: #5e17eb;
            --background: #f9f9f9;
            --light: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Space Mono', monospace;
            background-color: var(--background);
            color: var(--primary);
            line-height: 1.6;
            padding: 0 5%;
        }

        /* Layout */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2rem 0;
            flex-wrap: wrap;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            position: relative;
        }

        nav ul {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        nav a {
            text-decoration: none;
            color: var(--primary);
            position: relative;
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: var(--accent);
        }

        nav a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--accent);
            transition: width 0.3s ease;
        }

        nav a:hover::after {
            width: 100%;
        }

        /* Tab styles */
        .tabs {
            display: flex;
            border-bottom: 2px solid var(--accent);
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .tab {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 1.5rem;
            background-color: var(--light);
            border: 2px solid var(--accent);
            border-bottom: none;
            border-radius: 10px 10px 0 0;
            margin-right: 1rem;
            cursor: pointer;
            transition: background 0.3s;
        }

        .tab.active {
            background-color: var(--accent);
            color: var(--light);
        }

        .tab i {
            transition: transform 0.3s;
        }

        .section {
            background: var(--light);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
        }

        .timeline {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            padding-left: 1rem;
            border-left: 2px solid var(--accent);
            position: relative;
        }

        .timeline-item {
            position: relative;
            padding-left: 1.5rem;
        }

        .timeline-item::before {
            content: '•';
            position: absolute;
            left: -0.75rem;
            top: 0;
            font-size: 1.5rem;
            color: var(--accent);
        }

        .timeline-item p {
            margin: 0;
            color: var(--secondary);
        }

        .arrow {
            display: inline-block;
            margin-left: 0.5rem;
            margin-right: 0.5rem;
            color: var(--accent);
            font-weight: bold;
        }

        .skills {
            color: var(--accent);
            font-weight: bold;
        }

        @media (max-width: 768px) {
            header {
                flex-direction: column;
                gap: 1rem;
            }

            nav ul {
                flex-wrap: wrap;
                justify-content: center;
            }

            .tabs {
                flex-direction: column;
            }

            .tab {
                margin-right: 0;
                margin-bottom: 0.5rem;
            }
        }

        .hidden {
            display: none;
        }

        /* Footer */
        footer {
            padding: 2rem 0;
            text-align: center;
            color: var(--secondary);
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .social-link {
            color: var(--primary);
            font-size: 1.5rem;
            transition: color 0.3s, transform 0.3s;
        }

        .social-link:hover {
            color: var(--accent);
            transform: translateY(-3px);
        }
    </style>

